@model Project.Models.Repayment

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Repayment</h4>
        <hr />
        @Html.ValidationSummary(true)
        <div>
            @Html.Partial("_credit", ViewData["credit_info"])
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.bank, "bank", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("bank", String.Empty)
                @Html.ValidationMessageFor(model => model.bank)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.payment_date, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.payment_date)
                @Html.ValidationMessageFor(model => model.payment_date)
            </div>
        </div>

        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
        <div>
            @Html.Partial("_repayment", ViewData["payment_list"])
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
