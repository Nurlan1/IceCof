@model Project.Models.selling

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>selling</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            @Html.LabelFor(model => model.product, "Продукт", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("product", String.Empty)
                @Html.ValidationMessageFor(model => model.product)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.count, "Количество", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.count)
                @Html.ValidationMessageFor(model => model.count)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.worker, "Сотрудник", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("worker", String.Empty)
                @Html.ValidationMessageFor(model => model.worker)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.date, "Дата", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.date)
                @Html.ValidationMessageFor(model => model.date)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.sum, "Сумма", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.sum)
                @Html.ValidationMessageFor(model => model.sum)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Назадt", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
