@model Project.Models.salary

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>salary</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.worker, "Сотрудник", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("worker", String.Empty)
                @Html.ValidationMessageFor(model => model.worker)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.month, "Месяц", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("month", String.Empty)
                @Html.ValidationMessageFor(model => model.month)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.year, "Год", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("year", String.Empty)
                @Html.ValidationMessageFor(model => model.year)
            </div>
        </div>

        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

